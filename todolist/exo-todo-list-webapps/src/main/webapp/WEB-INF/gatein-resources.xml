<gatein-resources xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplatform.org/xml/ns/gatein_resources_1_4 http://www.exoplatform.org/xml/ns/gatein_resources_1_4" xmlns="http://www.exoplatform.org/xml/ns/gatein_resources_1_4">
<!-- 
  We can't use this due to:
  https://jira.exoplatform.org/browse/PLF-8100

  <portlet-skin>
    <application-name>exo-todo-list</application-name>
    <portlet-name>TodoList</portlet-name>
    <skin-name>Default</skin-name>
    <css-path>/css/todolist.css</css-path>
  </portlet-skin>
  <portlet-skin>
    <application-name>exo-todo-list</application-name>
    <portlet-name>TodoList</portlet-name>
    <skin-name>Enterprise</skin-name>
    <css-path>/css/todolist.css</css-path>
  </portlet-skin>
-->

  <portlet>
    <name>TodoList</name>
    <module>
      <script>
        <minify>false</minify>
        <path>/js/todolist.bundle.js</path>
      </script>
      <depends>
        <module>todolistVuetify</module>
      </depends>
      <depends>
        <module>jquery</module>
        <as>$</as>
      </depends>
      <depends>
        <module>fetchPolyfill</module>
      </depends>
      <depends>
        <module>customEventPolyfill</module>
      </depends>
      <depends>
        <module>iePolyfills</module>
      </depends>
      <depends>
        <module>userPopupPlugin</module>
      </depends>
      <depends>
        <module>spacePopupPlugin</module>
      </depends>
      <depends>
        <module>commons-cometd3</module>
        <as>cCometd</as>
      </depends>
    </module>
  </portlet>

  <module>
    <name>todolistVuetify</name>
    <script>
      <minify>false</minify>
      <path>/js/lib/vuetify.min.js</path>
    </script>
    <depends>
      <module>vue</module>
    </depends>
  </module>

</gatein-resources>
